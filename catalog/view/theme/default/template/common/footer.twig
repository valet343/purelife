  {% if facebook %}<li class="facebook"><a href="{{ facebook }}">{{ text_facebook }}</a></li>{% endif %}
  {% if twitter %}<li class="twitter"><a href="{{ twitter }}">{{ text_twitter }}</a></li>{% endif %}
