<footer>
  <div class="container">
    <div class="row">
      <div class="col-sm-3">
        <div id="logo">
              {% if logo %}
                <img src="{{ logo }}" title="{{ name }}" alt="{{ name }}" class="img-responsive" />
              {% endif %}
        </div>
        <p>{{ powered }}</p>
        {% if footer_socials %}
        <ul class="list-unstyled social_links">
          {% if instagram %}<li class="instagram"><a href="{{ instagram }}"></a></li>{% endif %}
          {% if facebook %}<li class="facebook"><a href="{{ facebook }}"></a></li>{% endif %}
          {% if twitter %}<li class="twitter"><a href="{{ twitter }}"></a></li>{% endif %}
          {% if youtube %}<li class="youtube"><a href="{{ youtube }}"></a></li>{% endif %}
          {% if linkedin %}<li class="linkedin"><a href="{{ linkedin }}"></a></li>{% endif %}
          {% if pinterest %}<li class="pinterest"><a href="{{ pinterest }}"></a></li>{% endif %}
        </ul>
        {% endif %}
      </div>
      <div class="col-sm-3">
        <h5>{{ text_catalog }}</h5>
        <ul class="list-unstyled">
          {{ menu }}
        </ul>
      </div>
      <div class="col-sm-3">
        <h5>{{ text_extra }}</h5>
        <ul class="list-unstyled">
          <li><a href="{{ account }}">{{ text_account }}</a></li>
          <li><a href="{{ wishlist }}">{{ text_wishlist }}</a></li>
          <li><a href="{{ compare }}">{{ text_compare }}</a></li>
          <li><a href="{{ contact }}">{{ text_contact }}</a></li>
          <li><a href="{{ manufacturer }}">{{ text_manufacturer }}</a></li>
          <li><a href="{{ special }}">{{ text_special }}</a></li>
          {% for information in informations %}
          <li><a href="{{ information.href }}">{{ information.title }}</a></li>
          {% endfor %}
          <li><a href="{{ return }}">{{ text_return }}</a></li>
          <li><a href="{{ sitemap }}">{{ text_sitemap_html }}</a></li>
          {% for sitemap in sitemaps %}
          <li><a href="{{ sitemap.href }}">{{ text_sitemap }} ({{ lang }})</a></li>
          {% endfor %}
        </ul>
      </div>
      <div class="col-sm-3">
        <h5>{{ text_contact }}</h5>
        {% if footer_phones %}
        <ul class="list-unstyled footer_telephones">
          <li><a href="tel:{{ telephone }}">{{ telephone }}</a></li>
          {% if telephone_2 %}<li><a href="tel:{{ telephone }}">{{ telephone_2 }}</a></li>{% endif %}
          {% if telephone_3 %}<li><a href="tel:{{ telephone }}">{{ telephone_3 }}</a></li>{% endif %}
          {% if telephone_4 %}<li><a href="tel:{{ telephone }}">{{ telephone_4 }}</a></li>{% endif %}
        </ul>
        {% endif %}
        {% if footer_messengers %}
        <ul class="list-unstyled messenger_links">
          {% if telegram %}<li class="telegram"><a href="https://t.me/{{ telegram }}"></a></li>{% endif %}
          {% if viber %}<li class="viber"><a href="viber://chat?number={{ viber }}"></a></li>{% endif %}
          {% if whatsapp %}<li class="whatsapp"><a href="whatsapp://send?phone={{ whatsapp }}"></a></li>{% endif %}
        </ul>
        {% endif %}
        {% if footer_email %}
        <ul class="list-unstyled">
          <li><a href="mailto:{{ email }}">{{ email }}</a></li>
        </ul>
        {% endif %}
      </div>
    </div>
  </div>
</footer>
{% if footer_payments_status %}
<div class="footer_payments_icons">
  {% for footer_payment in footer_payments %}
  <img src="{{ footer_payment.image }}" alt="">
  {% endfor %}
</div>
{% endif %}
{% if code_footer_js_link %}<script src="catalog/view/javascript/{{ code_footer_js_link }}.js{% if developer_mode %}?={{ developer_mode }}{% endif %}" type="text/javascript"></script>{% endif %}
{% if code_footer_js %}<script>{{ code_footer_js }}</script>{% endif %}
{% for style in styles %}
<link href="{{ style.href }}" type="text/css" rel="{{ style.rel }}" media="{{ style.media }}" />
{% endfor %}
{% for script in scripts %}
<script src="{{ script }}" type="text/javascript"></script>
{% endfor %}
<script src="catalog/view/javascript/voice_search.min.js" type="text/javascript"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-cookie/1.4.1/jquery.cookie.min.js"></script>
<div class="cookie_modal">
  {{ widgets_modal_cookie_description }}
  <span class="btn">{{ button_continue }}</span>
  <span class="btn btn-close">&times;</span>
</div>
<script>
  if (localStorage.getItem('agree_cookie') == null) {
    setTimeout(function(){
      $(".cookie_modal").addClass("active"); 
    }, 1000);
  }
  $(".cookie_modal span").on("click", function() {
    localStorage.setItem('agree_cookie', '1');
    $(".cookie_modal").remove();
  });
</script>
