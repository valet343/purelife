<div id="checkout-page">
{{ header }}
<button class="checkout_prev"><span class="icon"></span><p>{{ button_prev }}</p></button>
<div id="ckeckout-checkout" class="container">
  <div class="columns">
    {{ column_left }}
    <div id="content" class="{{ class }}">
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
      {% if error_warning %}
      <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}</div>
      {% endif %}
      <h1>{{ heading_title }}</h1>
      {{ content_top }}
      
      