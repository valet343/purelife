{% if banners %}
<section class="carousel">
  <div id="carousel_content{{ module }}" class="swiper carousel_content ">
    <div class="swiper-wrapper">
      {% for banner in banners %}
      <div class="swiper-slide item">
        {% if banner.link %}
        <a href="{{ banner.link }}">
          <img src="{{ banner.image }}" alt="{{ banner.title }}"/>
        </a>
        {% else %}
        <img src="{{ banner.image }}" alt="{{ banner.title }}"/>
        {% endif %}
      </div>
      {% endfor %}
    </div>
  </div>
  {% if arrows %}
  <div class="carousel_content_arrows swiper_arrows">
      <div class="arrow arrow_prev"></div>
      <div class="arrow arrow_next"></div>
  </div>
  {% endif %}
  <script>
    var swiperCarousel = new Swiper("#carousel_content{{ module }}", {
      slidesPerView: "auto",
      spaceBetween: 10,
      freeMode: true,
      {% if autoplay %}
      autoplay: {
        delay: {% if autoplay_time %}{{ autoplay_time }}{% else %}2000{% endif %}
      },
      {% endif %}
      {% if arrows %}
      navigation: {
        nextEl: ".carousel_content_arrows .arrow_next",
        prevEl: ".carousel_content_arrows .arrow_prev",
      },
      {% endif %}
    });
  </script>
</section>
{% endif %}