<div id="art_aqa_product_questions">
	<h3>{{ text_art_aqa_product_answers }}</h3>
	<div class="art_aqa_product_questions">
	{% for question in product_question %}
		<div class="art_aqa_item art_aqa_product_info">
			<div class="art_aqa_product_question">
				<div class="art_question_header">
					<b>{{ question.name }}</b>
					<p class="date">{{ question.date_added }}</p>
				</div>
				<div class="art_question_body">
					<p>{{ question.question }}</p>
				</div>
			</div>
		</div>
		{% if question.answer|striptags is not empty %}
			<div class="art_aqa_item art_aqa_product_answer">
				<div class="art_aqa_item art_aqa_product_answer_inner">
					<div class="art_question_header">
						<b class="art_question_title">{% if question.logo %}<img src="{{ question['logo'] }}" title="{{ question['answer_name'] }}" alt="{{ question.answer_name }}"> {% endif %} {{ question.answer_name }}</b>
						<p class="date">{{ question.date_answer }}</p>
					</div>
					<div class="art_question_body">{{ question.answer }}</div>
				</div>
			</div>
		{% endif %}
	{% endfor %}
	</div>
	<div class="text-right">{{ pagination }}</div>
	{% if product_question is empty %}
	<p>{{ text_no_answers }}</p>
	{% endif %}
</div>
