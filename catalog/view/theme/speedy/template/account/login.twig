{{ header }}
<div id="account-login" class="container">
  <div class="columns">
    {{ column_left }}
    <div id="content" class="{{ class }}">
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
      {{ content_top }}
      <div class="login_items">
        <div class="item">
          <h2>{{ text_new_customer }}</h2>
          <p><b>{{ text_register }}</b></p>
          <p>{{ text_register_account }}</p>
          <div class="buttons">
            <a href="{{ register }}" class="btn btn-primary">{{ button_continue }}</a>
          </div>
        </div>
        <div class="item">
          <h2>{{ text_returning_customer }}</h2>
          <p>{{ text_i_am_returning_customer }}</p>
          <form action="{{ action }}" method="post" enctype="multipart/form-data" class="form-horizontal">
            <div class="form-group">
              <input type="text" name="email" value="{{ email }}" placeholder="{{ entry_email }}" id="input-email" class="form-control" />
            </div>
            <div class="form-group">
              <input type="password" name="password" value="{{ password }}" placeholder="{{ entry_password }}" id="input-password" class="form-control" />
            </div>
            <a class="forgotten" href="{{ forgotten }}">{{ text_forgotten }}</a>
            <div class="buttons">
              <input type="submit" value="{{ button_login }}" class="btn btn-primary" />
            </div>
            {% if redirect %}
            <input type="hidden" name="redirect" value="{{ redirect }}" />
            {% endif %}
          </form>
          {% if success %}
            <div class="alert alert-success alert-dismissible">{{ success }}</div>
          {% endif %}
          {% if error_warning %}
            <div class="alert alert-danger alert-dismissible">{{ error_warning }}</div>
          {% endif %}
        </div>
      </div>
      {{ content_bottom }}
    </div>
    {{ column_right }}
  </div>
</div>
{{ footer }}