                {% endif %}
              </select>
            </div>
          </div>
		  
		  <div class="form-group">
            <label class="col-sm-3 control-label" for="input-descript">{{ entry_description }}</label>
            <div class="col-sm-9">
              <select name="module_speedy_quick_view_descript" id="input-descript" class="form-control">
                {% if descript %}
                <option value="1" selected="selected">{{ text_enabled }}</option>
