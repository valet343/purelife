              </select>
            </div>
          </div>
		  
		  <div class="form-group">
            <label class="col-sm-3 control-label" for="input-reviews">{{ entry_reviews }}</label>
            <div class="col-sm-9">
              <select name="module_speedy_quick_view_reviews" id="input-reviews" class="form-control">
                {% if reviews %}
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                {% else %}
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %}
              </select>
            </div>
          </div>
		  
		  </fieldset>
                </div>
                <div class="tab-pane" id="tab-additional">
                  <fieldset>
              <legend class="md-legend">{{ text_additional }}</legend> 
		  
		  <div class="form-group">
            <label class="col-sm-3 control-label" for="input-brand">{{ text_brand }}</label>
            <div class="col-sm-9">
              <select name="module_speedy_quick_view_brand" id="input-brand" class="form-control">
                {% if brand %}
                <option value="1" selected="selected">{{ text_enabled }}</option>
