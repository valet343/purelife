{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">

        {% if (list_menu_results) %} 
        <button type="button" data-toggle="tooltip" title="{{ button_delete }}" class="btn btn-danger" onclick="confirm('{{ text_confirm }}') ? $('#form-module').submit() : false;"><i class="fa fa-trash-o"></i></button>
        {% endif %} 
        <a href="{{ add }}" data-toggle="tooltip" title="{{ button_add }}" class="btn btn-success"><i class="fa fa-plus"></i></a>
        <button type="submit" form="form-module" formaction="{{ action }}" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>

      </div>

      <h1>{{ heading_title_text }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if (error_warning) %} 
    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }} 
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %} 
    <div class="panel panel-default" id="list-megamenu">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ delete }}" method="post" enctype="multipart/form-data" id="form-module" class="form-horizontal">
          <div class="form-group">
            <label class="col-sm-3 control-label" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-9">
              <select name="module_speedy_menu_status" id="input-status" class="form-control">
                {% if module_speedy_menu_status %}
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                {% else %}
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %}
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-3 control-label" for="input-status">Автоматическое создание категорий</label>
            <div class="col-sm-9">
              <a class="btn btn-primary" id="autocategoryadd" data-loading-text='{{ text_creating_categories }}'><i class="fa fa-plus"></i> Скопировать категории из системы</a>
              <br>
              <br>
              <div class="alert alert-warning alert-dismissible"><i class="fa fa-exclamation-circle"></i>Будут удалены все пункты меню категории и созданы новые</div>
            </div>
          </div>
          <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit_list_Item }}</h3>
          </div>
          <div class="panel-body">
          <div class="table-responsive">
                      <table class="table table-bordered table-hover">
                        <thead>
                          <tr>
                  <td style="width: 1px;" class="text-center"><input type="checkbox" onclick="$('input[name*=\'selected\']').prop('checked', this.checked);" /></td>
                  <td class="text-left">{{ column_title }}</td>
                  <td class="text-left">{{ column_link }}</td>
                  <td class="text-left">
                    {% if (sort == 'menu_type') %} 
                      <a href="{{ sort_menu_type }}" class="{{ order|lower }}">{{ column_type }}</a>
                    {% else %} 
                      <a href="{{ sort_menu_type }}">{{ column_type }}</a>
                    {% endif %} 
                  </td>
                  <td class="text-left">
                    {{ column_sticker }} 
                  </td>
                  <td class="text-center">
                    {% if (sort == 'status') %} 
                      <a href="{{ sort_status }}" class="{{ order|lower }}">{{ column_status }}</a>
                    {% else %} 
                      <a href="{{ sort_status }}">{{ column_status }}</a>
                    {% endif %} 
                    
                  </td>
                  <td class="text-right">
                    {% if (sort == 'sort_menu') %} 
                      <a href="{{ sort_menu }}" class="{{ order|lower }}">{{ column_sort_order }}</a>
                    {% else %} 
                      <a href="{{ sort_menu }}">{{ column_sort_order }}</a>
                    {% endif %}</td>
                  <td class="text-right">{{ column_action }}</td>
                          </tr>
                        </thead>
                        <tbody>
                          {% if (list_menu_results) %} 
                          {% for list_menu_result in list_menu_results %} 
                          <tr>
                            <td class="text-center">{% if list_menu_result.megamenu_id in selected %}
                              <input type="checkbox" name="selected[]" value="{{ list_menu_result['megamenu_id'] }}" checked="checked" />
                              {% else %} 
                              <input type="checkbox" name="selected[]" value="{{ list_menu_result['megamenu_id'] }}" />
                              {% endif %}</td>
                            <td class="text-left">
                    <a onclick="popupNameItem('{{ list_menu_result['megamenu_id'] }}')" data-toggle="tooltip" title="{{ button_edit }}" class="btn btn-info btn-sm"><i class="fa fa-pencil"></i></a>
                  {{ list_menu_result['namemenu'][lang_id] }}</td>
                            <td class="text-left">
                    <a onclick="popupLink('{{ list_menu_result['megamenu_id'] }}')" data-toggle="tooltip" title="{{ button_edit }}" class="btn btn-info btn-sm"><i class="fa fa-pencil"></i></a>
                  {{ list_menu_result['link'][lang_id] }}</td>
                            <td class="text-left">
                  <a onclick="popupTypeMenu('{{ list_menu_result['megamenu_id'] }}')" data-toggle="tooltip" title="{{ button_edit }}" class="btn btn-info btn-sm"><i class="fa fa-pencil"></i></a>
                  {{ list_menu_result['menu_type'] }} 
                  </td>
                            <td class="text-left">
                  <a onclick="popupSticker('{{ list_menu_result['megamenu_id'] }}')" data-toggle="tooltip" title="{{ button_edit }}" class="btn btn-info btn-sm"><i class="fa fa-pencil"></i></a>
                  {% if (list_menu_result['sticker_parent'][lang_id] is defined and (list_menu_result['sticker_parent'][lang_id] != '')) %}
                    <span class="cat-label cat-label-label" style="background:#{{ list_menu_result['spbg']}}; color:#{{ list_menu_result['spctext'] }}">{{ list_menu_result['sticker_parent'][lang_id] is defined ? list_menu_result['sticker_parent'][lang_id] : '' }}</span>
                  {% endif %} 
                 </td>
                            <td class="text-center"><a class="columnstatus" id="status-{{ list_menu_result['megamenu_id'] }}">{{ list_menu_result['status'] }}</a></td>
                            <td class="text-right">{{ list_menu_result['sort_menu'] }}</td>
                            <td class="text-right"><a href="{{ list_menu_result['edit'] }}" data-toggle="tooltip" title="{{ button_edit }}" class="btn btn-primary"><i class="fa fa-pencil"></i></a></td>
                          </tr>
                          {% endfor %} 
                          {% else %} 
                          <tr>
                            <td class="text-center" colspan="5">{{ text_no_results }}</td>
                          </tr>
                          {% endif %} 
                        </tbody>
                      </table>
                    </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<style>
#form-megamenuvh-setting .cat-label{font-size:10px; text-shadow:2px 3px 3px rgba(0, 0, 0, 0.25); font-weight:600; border-radius: 2px; line-height: 1; padding:3px; z-index: 1; text-transform: uppercase; }
#form-megamenuvh-setting .cat-label-label{ background: #d9d9d9; color: #333; }
</style>
<script>
  $('#autocategoryadd').bind('click',function() { 
    var autocategoryadd = 1;
      $.ajax({
        type:'get',
        dataType:'json',
        data:'autocategoryadd=' + autocategoryadd,
        url:'index.php?route=extension/module/speedy_menu/autocategoryadd&user_token={{ user_token }}',
        beforeSend: function() {
          $('#autocategoryadd').button('loading');
        },
        complete: function() {
          $('#autocategoryadd').button('reset');
        },              
        success: function(json){
        $('.alert.alert-danger').remove()
          if (json['warning']) {
            $('#list-megamenu').before('<div class="alert alert-danger"><i class="fa fa-check-circle"></i> ' + json['warning'] + '</div>'); 
          }
          if (json['success']) {
            location.reload(); 
          } 
        }
      });       
  
  });
</script>
<script>
function popupTypeMenu(megamenu_id) { 
  html  = '<div class="modal fade" id="typemenu-modal-'+megamenu_id+'">';
  html += '  <div id="typemenu-content-'+megamenu_id+'"></div>';
  html += '</div>';

  $('body').append(html);       
  $('body').addClass('mopen-menu');       
              
  $('#typemenu-modal-'+megamenu_id+'').modal({backdrop:'static',keyboard: false});
  $('#typemenu-content-'+megamenu_id+'').load('index.php?route=extension/module/speedy_menu/popupTypeMenu&user_token={{ user_token }}&megamenu_id='+megamenu_id);
}
function popupLink(megamenu_id) { 
  html  = '<div class="modal fade" id="link-modal-'+megamenu_id+'">';
  html += '  <div id="link-content-'+megamenu_id+'"></div>';
  html += '</div>';

  $('body').append(html);       
              
  $('#link-modal-'+megamenu_id+'').modal({backdrop:'static',keyboard: false});
  $('#link-content-'+megamenu_id+'').load('index.php?route=extension/module/speedy_menu/popupLink&user_token={{ user_token }}&megamenu_id='+megamenu_id);
}
function popupSticker(megamenu_id) {  
  html  = '<div class="modal fade" id="sticker-modal-'+megamenu_id+'">';
  html += '  <div id="sticker-content-'+megamenu_id+'"></div>';
  html += '</div>';

  $('body').append(html);       
              
  $('#sticker-modal-'+megamenu_id+'').modal({backdrop:'static',keyboard: false});
  $('#sticker-content-'+megamenu_id+'').load('index.php?route=extension/module/speedy_menu/popupSticker&user_token={{ user_token }}&megamenu_id='+megamenu_id);
  
}
function popupNameItem(megamenu_id) { 
  html  = '<div class="modal fade" id="nameitem-modal-'+megamenu_id+'">';
  html += '  <div id="nameitem-content-'+megamenu_id+'"></div>';
  html += '</div>';

  $('body').append(html);       
              
  $('#nameitem-modal-'+megamenu_id+'').modal({backdrop:'static',keyboard: false});
  $('#nameitem-content-'+megamenu_id+'').load('index.php?route=extension/module/speedy_menu/popupNameItem&user_token={{ user_token }}&megamenu_id='+megamenu_id);
}
$('.columnstatus').click(function() {
  var object_id=$(this).attr('id');
  $.ajax({
    url: 'index.php?route=extension/module/speedy_menu/changeStatus&user_token={{ user_token }}',
    type: 'get',
    data: {object_id:object_id},
    dataType: 'json',
    success: function(json) {
      $('.alert.alert-danger').remove()
      if (json['error']) {
        $('#list-megamenu').before('<div class="alert alert-danger"><i class="fa fa-check-circle"></i> ' + json['error'] + '</div>'); 
        $('html, body').animate({ scrollTop: 0 }, 'slow');
      }
      
      if (json['success']) {
        if(json['success']!=''){        
          $('#'+object_id).html(json['success']);
        }
      }
    }
  });
}); 
</script>
{{ footer }}