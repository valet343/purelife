  <div class="form-group">
    <label class="col-sm-3 control-label">{{ entry_module_heading_title }}</label>
    <div class="col-sm-9">
      {% for language in languages %}
      <div class="input-group">
        <span class="input-group-addon"><img src="{{ language.image }}" title="{{ language.name }}" /></span>
        <input type="text" name="module_heading_title[{{ language.language_id }}]" value="{{ module_heading_title[language.language_id] ? module_heading_title[language.language_id] : '' }}" placeholder="{{ entry_module_heading_title }}" class="form-control" />
      </div>
      {% if error_module_heading_title[language.language_id] %}
      <div class="text-danger">{{ error_module_heading_title[language.language_id] }}</div>
      {% endif %}
      {% endfor %}
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-3 control-label">{{ entry_mobile_button_text }}</label>
    <div class="col-sm-9">
      {% for language in languages %}
      <div class="input-group">
        <span class="input-group-addon"><img src="{{ language.image }}" title="{{ language.name }}" /></span>
        <input type="text" name="mobile_button_text[{{ language.language_id }}]" value="{{ mobile_button_text[language.language_id] ? mobile_button_text[language.language_id] : '' }}" placeholder="{{ entry_mobile_button_text }}" class="form-control" />
      </div>
      {% if error_mobile_button_text[language.language_id] %}
      <div class="text-danger">{{ error_mobile_button_text[language.language_id] }}</div>
      {% endif %}
      {% endfor %}
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-3 control-label">{{ entry_mobile_button_position }}</label>
    <div class="col-sm-9">
      <div class="btn-group" data-toggle="buttons">
        {% if mobile_button_position == 'fixed' %}
        <label class="btn btn-default active">
          <input type="radio" name="mobile_button_position" value="fixed" checked="checked" /> {{ text_mobile_button_position_fixed }}
        </label>
        {% else %}
        <label class="btn btn-default">
          <input type="radio" name="mobile_button_position" value="fixed" /> {{ text_mobile_button_position_fixed }}
        </label>      
        {% endif %}
        
        {% if mobile_button_position == 'static' %}
        <label class="btn btn-default active">
          <input type="radio" name="mobile_button_position" value="static" checked="checked" /> {{ text_mobile_button_position_static }}
        </label>
        {% else %}
        <label class="btn btn-default">
          <input type="radio" name="mobile_button_position" value="static" /> {{ text_mobile_button_position_static }}
        </label>      
        {% endif %}
        
        {% if mobile_button_position == 'both' %}
        <label class="btn btn-default active">
          <input type="radio" name="mobile_button_position" value="both" checked="checked" /> {{ text_mobile_button_position_both }}
        </label>
        {% else %}
        <label class="btn btn-default">
          <input type="radio" name="mobile_button_position" value="both" /> {{ text_mobile_button_position_both }}
        </label>      
        {% endif %}      
      </div>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-3 control-label" for="input-mobile-max-width">{{ entry_mobile_max_width }}</label>
    <div class="col-sm-3">
      <div class="input-group">
        <input type="number" name="mobile_max_width" min="0" value="{{ mobile_max_width }}" class="form-control" id="input-mobile-max-width" />
        <span class="input-group-addon">px</span>
      </div>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-3 control-label">{{ entry_mobile_placement }}</label>
    <div class="col-sm-9">
      <div class="btn-group" data-toggle="buttons">
        {% if mobile_placement == 'left' %}
        <label class="btn btn-default active">
          <input type="radio" name="mobile_placement" value="left" checked="checked" /> <i class="fa fa-step-backward"></i> {{ text_mobile_placement_left }}
        </label>
        <label class="btn btn-default">
          <input type="radio" name="mobile_placement" value="right" /> {{ text_mobile_placement_right }} <i class="fa fa-step-forward"></i>
        </label>      
        {% endif %}
        {% if mobile_placement == 'right' %}
        <label class="btn btn-default">
          <input type="radio" name="mobile_placement" value="left" /> <i class="fa fa-step-backward"></i> {{ text_mobile_placement_left }}
        </label>
        <label class="btn btn-default active">
          <input type="radio" name="mobile_placement" value="right" checked="checked" /> {{ text_mobile_placement_right }} <i class="fa fa-step-forward"></i>
        </label>
        {% endif %}
      </div>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-3 control-label">{{ entry_mobile_remember_state }}</label>
    <div class="col-sm-5">    
      {{ include('extension/module/ocfilter/control/bool_button.twig', { flag: mobile_remember_state, name: 'mobile_remember_state' }) }}
    </div>
  </div>
</fieldset>
