<div class="form-group">
  <label class="col-sm-3 control-label">{{ entry_search_button }}</label>
  <div class="col-sm-9">    
    {{ include('extension/module/ocfilter/control/bool_button.twig', { flag: search_button, name: 'search_button' }) }}
  </div>
