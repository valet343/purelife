{{ header }}{{ column_left }}
<div id="content" class="ocf-page">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="button" onclick="$('#form-ocfilter').attr('action', '{{ save }}').submit();" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <button type="button" onclick="$('#form-ocfilter').attr('action', '{{ apply }}').submit();" data-toggle="tooltip" title="{{ button_apply }}" class="btn btn-success"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
      </div>
      <h1>{{ heading_title_setting }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>

  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    {% if success %}
    <div class="alert alert-success"><i class="fa fa-exclamation-circle"></i> {{ success }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="" method="post" enctype="multipart/form-data" id="form-ocfilter" class="form-horizontal">
          <div role="tabs">
            <ul class="nav nav-tabs" role="tablist">
              <li class="active"><a href="#tab-general" data-toggle="tab">{{ tab_general }}</a></li>
              <li><a href="#tab-special-filter" data-toggle="tab">{{ tab_special_filter }}</a></li>
              <li><a href="#tab-placement" data-toggle="tab">{{ tab_placement }}</a></li>
              <li><a href="#tab-appearance" data-toggle="tab">{{ tab_appearance }}</a></li>
              <li><a href="#tab-copy" data-toggle="tab">{{ tab_copy }}</a></li>
              <li><a href="#tab-seo" data-toggle="tab">{{ tab_seo }}</a></li>
            </ul>

            <div class="tab-content">
              <div id="tab-general" class="tab-pane active">
                {% include 'extension/module/ocfilter/setting_form/tab_general.twig' %}
                <div class="form-group">
                  <label class="col-sm-3 control-label">{{ text_ocfilter_page }}</label>
                  <div class="col-sm-9">
                    <ul class="list-inline" style="margin-top: 9px;">
                      <li><a href="{{ filter_list }}" target="_blank">{{ text_filter_list }}</a></li>
                      <li><a href="{{ filter_page_list }}" target="_blank">{{ text_filter_page_list }}</a></li>
                    </ul>
                  </div>
                </div>
              </div>

              <div id="tab-special-filter" class="tab-pane">
                {% include 'extension/module/ocfilter/setting_form/tab_special_filter.twig' %}
              </div>

              <div id="tab-seo" class="tab-pane">
                {% include 'extension/module/ocfilter/setting_form/tab_seo.twig' %}
              </div>

              <div id="tab-appearance" class="tab-pane">
                {% include 'extension/module/ocfilter/setting_form/tab_appearance.twig' %}
              </div>

              <div id="tab-placement" class="tab-pane">
                {% include 'extension/module/ocfilter/setting_form/tab_placement.twig' %}
              </div>

              <div id="tab-copy" class="tab-pane">
                {% include 'extension/module/ocfilter/setting_form/tab_copy.twig' %}
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div> 
</div>
{{ footer }}