{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-module" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-module" class="form-horizontal">
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-10">
              <select name="module_blog_category_status" id="input-status" class="form-control">
                {% if module_blog_category_status %}
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                {% else %}
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %}
              </select>
            </div>
          </div>
          
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-font-family">{{ entry_font_family }}</label>
            <div class="col-sm-10">
              <input type="text" name="module_blog_category_font_family" value="{{ module_blog_category_font_family }}" placeholder="Arial, sans-serif" id="input-font-family" class="form-control" />
              <small class="help-block">{{ help_font_family }}</small>
            </div>
          </div>
          
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-font-size">{{ entry_font_size }}</label>
            <div class="col-sm-10">
              <input type="text" name="module_blog_category_font_size" value="{{ module_blog_category_font_size }}" placeholder="16px" id="input-font-size" class="form-control" />
              <small class="help-block">{{ help_font_size }}</small>
            </div>
          </div>
          
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-font-weight">{{ entry_font_weight }}</label>
            <div class="col-sm-10">
              <select name="module_blog_category_font_weight" id="input-font-weight" class="form-control">
                <option value="normal" {% if module_blog_category_font_weight == 'normal' %}selected="selected"{% endif %}>Normal</option>
                <option value="bold" {% if module_blog_category_font_weight == 'bold' %}selected="selected"{% endif %}>Bold</option>
                <option value="300" {% if module_blog_category_font_weight == '300' %}selected="selected"{% endif %}>300 (Light)</option>
                <option value="400" {% if module_blog_category_font_weight == '400' %}selected="selected"{% endif %}>400 (Regular)</option>
                <option value="500" {% if module_blog_category_font_weight == '500' %}selected="selected"{% endif %}>500 (Medium)</option>
                <option value="600" {% if module_blog_category_font_weight == '600' %}selected="selected"{% endif %}>600 (Semi-Bold)</option>
                <option value="700" {% if module_blog_category_font_weight == '700' %}selected="selected"{% endif %}>700 (Bold)</option>
              </select>
            </div>
          </div>
          
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-font-color">{{ entry_font_color }}</label>
            <div class="col-sm-10">
              <input type="color" name="module_blog_category_font_color" value="{{ module_blog_category_font_color ? module_blog_category_font_color : '#000000' }}" id="input-font-color" class="form-control" style="width: 100px;" />
            </div>
          </div>
          
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-show-icons">{{ entry_show_icons }}</label>
            <div class="col-sm-10">
              <select name="module_blog_category_show_icons" id="input-show-icons" class="form-control">
                {% if module_blog_category_show_icons %}
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                {% else %}
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %}
              </select>
            </div>
          </div>
          
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-icon-size">{{ entry_icon_size }}</label>
            <div class="col-sm-10">
              <input type="text" name="module_blog_category_icon_size" value="{{ module_blog_category_icon_size ? module_blog_category_icon_size : '24px' }}" placeholder="24px" id="input-icon-size" class="form-control" />
              <small class="help-block">{{ help_icon_size }}</small>
            </div>
          </div>
          
          <div class="form-group">
            <label class="col-sm-2 control-label">{{ entry_category_icons }}</label>
            <div class="col-sm-10">
              <div class="table-responsive">
                <table class="table table-bordered table-hover">
                  <thead>
                    <tr>
                      <td class="text-left">{{ column_category_name }}</td>
                      <td class="text-left">{{ column_icon }}</td>
                    </tr>
                  </thead>
                  <tbody>
                    {% for category in categories %}
                    <tr>
                      <td class="text-left">{{ category.name }}</td>
                      <td class="text-left">
                        <a href="" id="thumb-icon-{{ category.blog_category_id }}" data-toggle="image" class="img-thumbnail">
                          <img src="{{ category.image ? category.image : placeholder }}" alt="" title="" data-placeholder="{{ placeholder }}" />
                        </a>
                        <input type="hidden" name="module_blog_category_icon[{{ category.blog_category_id }}]" value="{{ category.image_path }}" id="input-icon-{{ category.blog_category_id }}" />
                      </td>
                    </tr>
                    {% endfor %}
                  </tbody>
                </table>
              </div>
              <small class="help-block">{{ help_category_icons }}</small>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
{{ footer }}