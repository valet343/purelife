										<script>

										$(document).ready(function() {
											// Проверка на доступность редактирования цветов цветовой схемы
											if($(".scheme_color_edit[value='1']").is(":checked")) {
												$(".scheme_color_item").removeClass("scheme_color_item_hidden");
												$(".scheme_color_edit_item").removeClass("scheme_color_edit_item_hidden");
											}

											// Проверка на тип основного цвета
											if($(".main_color_type[value='1']").is(":checked")) {
												$(".theme_main_color_add").removeClass("theme_main_color_add_hidden");
											}
										})

										// Разрешить изменять цвета
										$(".scheme_color_edit").on("click", function() {
											$(".scheme_color_edit").removeAttr('sce');
											$(this).attr('sce', true);
											if($(".scheme_color_edit[value='1']").is(":checked")) {
												$(".scheme_color_item").removeClass("scheme_color_item_hidden");
												$(".scheme_color_edit_item").addClass("scheme_color_edit_item_hidden");
												// Вкл "свою конфигурацию"
												$("#scheme_color_99").prop('checked', true);
											} else {
												$(".scheme_color_item").addClass("scheme_color_item_hidden");
												$(".scheme_color_edit_item").removeClass("scheme_color_edit_item_hidden");
											}
										})

										// Разрешить изменять тип основного цвета

										$(".main_color_type").on("click", function() {
											if($(".main_color_type[value='1']").is(":checked")) {
												$(this).parent().parent().find(".theme_main_color_add").removeClass("theme_main_color_add_hidden");
											} else {
												$(this).parent().parent().find(".theme_main_color_add").addClass("theme_main_color_add_hidden");
											}
										})

										// Проверка на выбор кастомной цветовой схемы
										if($("#scheme_color_99").is('checked')) {
											$(".scheme_color_item").removeClass("scheme_color_item_hidden");
											$(".scheme_color_edit_item").addClass("scheme_color_edit_item_hidden");
											$(".scheme_color_edit[value='1']").prop('checked', true);
										} else {
											$(".scheme_color_edit_item").removeClass("scheme_color_edit_item_hidden");
										}

