															<input type="text" name="theme_speedy_main_color_2" value="{{ theme_speedy_main_color_2 }}" placeholder="#000000" id="input-main-color-2" class="form-control colorpicker theme_main_color_2" />
															<input type="text" name="theme_speedy_main_color_3" value="{{ theme_speedy_main_color_3 }}" placeholder="#000000" id="input-main-color-3" class="form-control colorpicker theme_main_color_3 " />
