<div id="content" class="dc_pro_theme">
	<div class="page-header">
		<div class="container-fluid">
			<div class="pull-right">
				<button type="submit" form="form-theme" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
				<a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
			<h1>{{ heading_title_text }} <span>v{{ speedy_version }}</span></h1>
			<ul class="breadcrumb">
				{% for breadcrumb in breadcrumbs %}
				<li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
				{% endfor %}
			</ul>
		</div>
	</div>
	<div class="container-fluid">
		{% if error_warning %}
		<div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
			<button type="button" class="close" data-dismiss="alert">&times;</button>
		</div>
		{% endif %}
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
			</div>
			<div class="panel-body" style="position: relative;">
				<div class="load">
					<img src="../image/catalog/favicon.svg" alt="">
				</div>
				<form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-theme" class="form-horizontal">
					<ul class="nav nav-tabs">
						<li class="active"><a href="#tab-general" data-toggle="tab">{{ tab_general }}</a></li>
						<li><a href="#tab-pages" data-toggle="tab">{{ tab_pages }}</a></li>
						<li><a href="#tab-parts" data-toggle="tab">{{ tab_parts }}</a></li>
						<li><a href="#tab-images" data-toggle="tab">{{ tab_images }}</a></li>
						<li><a href="#tab-widgets" data-toggle="tab">{{ tab_widgets }}</a></li>
						<li><a href="#tab-help" data-toggle="tab">{{ tab_help }}</a></li>
						{% if theme_speedy_update_status %}<li class="tab_update_alert"><a href="#tab-update" data-toggle="tab">{{ tab_update }} ({{ theme_speedy_update_version }})</a></li>{% endif %}
					</ul>
					<div class="tab-content">
						<div class="tab-pane active" id="tab-general">
							<fieldset class="row">
								<div class="col-sm-3">
									<ul class="tab-general_left">
										<li class="main active"><a href="#tab-main" data-toggle="tab">{{ tab_main }}</a></li>
										<!-- <li class="header"><a href="#tab-header" data-toggle="tab">{{ tab_header }}</a></li> -->
										<!-- <li class="footer"><a href="#tab-footer" data-toggle="tab">{{ tab_footer }}</a></li> -->
										<li class="push"><a href="#tab-push" data-toggle="tab">{{ tab_push }}</a></li>
										<li class="adaptive"><a href="#tab-adaptive" data-toggle="tab">{{ tab_adaptive }}</a></li>
										<li class="code"><a href="#tab-code" data-toggle="tab">{{ tab_code }}</a></li>
									</ul>
								</div>
								<div class="col-sm-9">
									<div class="tab-content">
										<div class="tab-pane active" id="tab-main">
											<fieldset>
												<legend>{{ text_general }}</legend>
												<div class="form-group" style="display: none">
													<label class="col-sm-2 control-label" for="input-directory"><span data-toggle="tooltip" title="{{ help_directory }}">{{ entry_directory }}</span></label>
													<div class="col-sm-10">
														<select name="theme_speedy_directory" id="input-directory" class="form-control">
															{% for directory in directories %}
															{% if directory == theme_speedy_directory %}
															<option value="{{ directory }}" selected="selected">{{ directory }}</option>
															{% else %}
															<option value="{{ directory }}">{{ directory }}</option>
															{% endif %}
															{% endfor %}
														</select>
													</div>
												</div>
												<div class="form-group" style="border-top: none">
													<label class="col-sm-3 control-label" for="input-status">{{ entry_status }}</label>
													<div class="col-sm-9">
														<select name="theme_speedy_status" id="input-status" class="form-control">
															{% if theme_speedy_status %}
															<option value="1" selected="selected">{{ text_enabled }}</option>
															<option value="0">{{ text_disabled }}</option>
															{% else %}
															<option value="1">{{ text_enabled }}</option>
															<option value="0" selected="selected">{{ text_disabled }}</option>
