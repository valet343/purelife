{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <h1>{{ heading_title }}</h1>
    </div>
  </div>
  <div class="container-fluid">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-list"></i> {{ text_list }}</h3>
      </div>
      <div class="panel-body">
        <form action="" method="post" enctype="multipart/form-data" id="form-category">
          <div class="alert alert-info">
            Вы можете делать рассылку писем по подписчикам из этого модуля из стандартного функционала "Маркетинг" -> "Почта"
          </div>
          <div class="table-responsive">
            <table class="table table-bordered table-hover">
              <thead>
                <tr>
                  <td style="width: 1px;" class="text-left">№</td>
                  <td class="text-left">Email</td>
                  <td class="text-left"></td>
                </tr>
              </thead>
              <tbody>
                {% for n in newsltr %}
                <tr>
                  <td class="text-left">{{ n.id }}</td>
                  <td class="text-left">{{ n.email }}</td>
                  <td class="text-right"><a href="{{ n.delete }}" data-toggle="tooltip" class="btn btn-danger"><i class="fa fa-trash-o"></i></a></td>
                </tr>
                {% endfor %}
              </tbody>
            </table>
          </div>
        </form>
        <div class="row">
          <div class="col-sm-6 text-left">{{ pagination }}</div>
        </div>
      </div>
    </div>
  </div>
</div>
{{ footer }}